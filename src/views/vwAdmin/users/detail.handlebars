{{#section 'css'}}
<link rel="stylesheet" href="/static/css/admin/users/detail.css">
{{/section}}

<div class="container-fluid mt-4 mb-5">
  <div class="row">
    
    <!-- SIDEBAR -->
    <div class="col-md-3 mb-4">
        {{> admin-sidebar activeSection='users'}}
    </div>

    <!-- CONTENT -->
    <div class="col-md-9">
      <div class="card shadow-sm border-0">
        
        <!-- Header -->
        <div class="card-header bg-white border-bottom py-3">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-danger">
                <i class="bi bi-person-circle me-2"></i> USER DETAILS
            </h5>
            <div class="d-flex gap-2">
              <a href="/admin/users/edit/{{user.id}}" class="btn btn-primary btn-sm rounded-pill px-3">
                  <i class="bi bi-pencil-square me-1"></i> Edit User
              </a>
              <a href="/admin/users/list" class="btn btn-outline-secondary btn-sm rounded-pill px-3">
                  <i class="bi bi-arrow-left me-1"></i> Back to List
              </a>
            </div>
          </div>
        </div>
        
        <!-- Body -->
        <div class="card-body p-4">
          {{#if user}}
          
          <!-- User Avatar & Basic Info -->
          <div class="text-center mb-4 pb-4 border-bottom">
            <img src="https://ui-avatars.com/api/?name={{user.fullname}}&size=120&background=random" 
                 class="rounded-circle shadow-lg mb-3" width="120" height="120">
            <h4 class="fw-bold mb-2">{{user.fullname}}</h4>
            <div class="mb-2">
              {{#if (eq user.role 'admin')}}
                <span class="badge bg-danger fs-6">Admin</span>
              {{else}}
                {{#if (eq user.role 'seller')}}
                  <span class="badge bg-success fs-6">Seller</span>
                {{else}}
                  <span class="badge bg-secondary fs-6">Bidder</span>
                {{/if}}
              {{/if}}
            </div>
            <div class="text-muted small">User ID: #{{user.id}}</div>
          </div>

          <!-- User Information Grid -->
          <div class="row g-4">
            
            <!-- Contact Information Section -->
            <div class="col-12">
              <h6 class="text-uppercase text-muted fw-bold mb-3 border-bottom pb-2">
                <i class="bi bi-envelope-at me-2"></i> Contact Information
              </h6>
            </div>

            <div class="col-md-6">
              <div class="p-3 bg-light rounded">
                <div class="small text-muted mb-1">
                  <i class="bi bi-envelope me-1"></i> Email Address
                </div>
                <div class="fw-bold">{{user.email}}</div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 bg-light rounded">
                <div class="small text-muted mb-1">
                  <i class="bi bi-geo-alt me-1"></i> Address
                </div>
                <div class="fw-bold">{{user.address}}</div>
              </div>
            </div>

            <!-- Personal Information Section -->
            <div class="col-12 mt-4">
              <h6 class="text-uppercase text-muted fw-bold mb-3 border-bottom pb-2">
                <i class="bi bi-person-badge me-2"></i> Personal Information
              </h6>
            </div>

            <div class="col-md-6">
              <div class="p-3 bg-light rounded">
                <div class="small text-muted mb-1">
                  <i class="bi bi-calendar me-1"></i> Date of Birth
                </div>
                <div class="fw-bold">
                  {{#if user.date_of_birth}}
                    {{format_date user.date_of_birth}}
                  {{else}}
                    <span class="text-muted">Not provided</span>
                  {{/if}}
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 bg-light rounded">
                <div class="small text-muted mb-1">
                  <i class="bi bi-shield-check me-1"></i> Role
                </div>
                <div class="fw-bold text-capitalize">{{user.role}}</div>
              </div>
            </div>

            <!-- Account Status Section -->
            <div class="col-12 mt-4">
              <h6 class="text-uppercase text-muted fw-bold mb-3 border-bottom pb-2">
                <i class="bi bi-gear me-2"></i> Account Status
              </h6>
            </div>

            <div class="col-md-6">
              <div class="p-3 bg-light rounded">
                <div class="small text-muted mb-1">
                  <i class="bi bi-envelope-check me-1"></i> Email Verification
                </div>
                <div>
                  {{#if user.email_verified}}
                    <span class="badge bg-success">
                      <i class="bi bi-check-circle me-1"></i> Verified
                    </span>
                  {{else}}
                    <span class="badge bg-warning text-dark">
                      <i class="bi bi-exclamation-circle me-1"></i> Not Verified
                    </span>
                  {{/if}}
                </div>
              </div>
            </div>

            <!-- Timestamps Section -->
            <div class="col-12 mt-4">
              <h6 class="text-uppercase text-muted fw-bold mb-3 border-bottom pb-2">
                <i class="bi bi-clock-history me-2"></i> Account Timeline
              </h6>
            </div>

            <div class="col-md-6">
              <div class="p-3 bg-light rounded">
                <div class="small text-muted mb-1">
                  <i class="bi bi-calendar-plus me-1"></i> Account Created
                </div>
                <div class="fw-bold">{{format_date user.created_at}}</div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="p-3 bg-light rounded">
                <div class="small text-muted mb-1">
                  <i class="bi bi-calendar-check me-1"></i> Last Updated
                </div>
                <div class="fw-bold">{{format_date user.updated_at}}</div>
              </div>
            </div>

          </div>

          <!-- Action Buttons -->
          <div class="mt-4 pt-4 border-top">
            <div class="d-flex justify-content-between">
              <a href="/admin/users/list" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to List
              </a>
              <div>
                <a href="/admin/users/edit/{{user.id}}" class="btn btn-primary me-2">
                  <i class="bi bi-pencil-square me-2"></i>Edit User
                </a>
                <button type="button" class="btn btn-danger" data-user-id="{{user.id}}" data-user-name="{{user.fullname}}" onclick="confirmDelete(this)">
                  <i class="bi bi-trash me-2"></i>Delete User
                </button>
              </div>
            </div>
          </div>

          {{else}}
          <div class="alert alert-warning">
              <i class="bi bi-exclamation-triangle me-2"></i> User not found.
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
function confirmDelete(button) {
    const userId = button.dataset.userId;
    const userName = button.dataset.userName;
    
    Swal.fire({
        title: 'Are you sure?',
        html: `You are about to delete user: <strong>${userName}</strong><br>This action cannot be undone!`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#6c757d',
        confirmButtonText: 'Yes, delete it!',
        cancelButtonText: 'Cancel'
    }).then((result) => {
        if (result.isConfirmed) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/admin/users/delete';
            
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'id';
            input.value = userId;
            
            form.appendChild(input);
            document.body.appendChild(form);
            form.submit();
        }
    });
}
</script>
{{/section}}