{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Xử lý sự kiện nút xóa
    $('.btn-delete').on('click', function(e) {
        e.preventDefault();
        const id = $(this).data('id');
        const form = $('#formDelete');
        
        form.attr('action', '/admin/users/delete'); 
        $('#txtDeleteId').val(id);
        
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this! This user will be permanently deleted.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#dc3545', // Màu đỏ Danger
            cancelButtonColor: '#6c757d',
            confirmButtonText: 'Yes, delete user!'
        }).then((result) => {
            if (result.isConfirmed) {
                form.submit();
            }
        });
    });
</script>
{{/section}}

<div class="container-fluid mt-4 mb-5">
  <div class="row">
    
    <!-- SIDEBAR (Đồng bộ với các trang Admin khác) -->
    <div class="col-md-3 mb-4">
        {{> admin-sidebar activeSection='users'}}
    </div>

    <!-- CONTENT -->
    <div class="col-md-9">
      <div class="card shadow-sm border-0 h-100">
        
        <!-- Header & Toolbar -->
        <div class="card-header bg-white border-bottom py-3 d-flex justify-content-between align-items-center">
          <h5 class="mb-0 fw-bold text-danger">
              <i class="bi bi-people-fill me-2"></i> MANAGE USERS
          </h5>
          <div class="d-flex gap-2">
            {{!-- Link sang trang duyệt nâng cấp --}}
            <a href="/admin/users/upgrade-requests" class="btn btn-outline-primary btn-sm rounded-pill px-3">
                <i class="bi bi-person-up me-1"></i> Upgrade Requests
            </a>
            {{!-- Link thêm mới user --}}
            <a href="/admin/users/add" class="btn btn-danger btn-sm rounded-pill px-3">
                <i class="bi bi-plus-lg me-1"></i> Add New User
            </a>
          </div>
        </div>
        
        <!-- Body -->
        <div class="card-body p-0">
            
            {{!-- Hiển thị thông báo thành công nếu có --}}
            {{#if success_message}}
            <div class="alert alert-success m-3 alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> {{success_message}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {{/if}}

            {{#if this.empty}}
            <div class="text-center py-5">
                <div class="text-muted mb-3 opacity-50"><i class="bi bi-people fs-1"></i></div>
                <h6 class="text-muted fw-normal">No users found.</h6>
            </div>
            {{else}}
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-secondary text-uppercase small">
                        <tr>
                            <th scope="col" class="ps-4 py-3">User</th>
                            <th scope="col" class="py-3">Role</th>
                            <th scope="col" class="py-3">Email</th>
                            <th scope="col" class="text-end pe-4 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each this.users}}
                        <tr>
                            <td class="ps-4 py-3">
                                <div class="d-flex align-items-center">
                                    {{!-- Avatar UI Avatars --}}
                                    <img src="https://ui-avatars.com/api/?name={{fullname}}&size=40&background=random" 
                                         class="rounded-circle me-3 shadow-sm" width="40" height="40">
                                    <div>
                                        <div class="fw-bold text-dark">{{fullname}}</div>
                                        <div class="small text-muted">ID: #{{id}}</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                {{!-- Badge Role --}}
                                {{#if (eq role 'admin')}}
                                    <span class="badge bg-danger">Admin</span>
                                {{else}}
                                    {{#if (eq role 'seller')}}
                                        <span class="badge bg-success">Seller</span>
                                    {{else}}
                                        <span class="badge bg-secondary">Bidder</span>
                                    {{/if}}
                                {{/if}}
                            </td>
                            <td>{{email}}</td>
                            <td class="text-end pe-4">
                                {{!-- View Detail Button --}}
                                <a href="/admin/users/detail/{{id}}" class="btn btn-sm btn-outline-info shadow-sm me-1" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                {{!-- Delete Button (Ẩn với Admin để tránh xóa nhầm chính mình hoặc admin khác nếu chưa phân quyền kỹ) --}}
                                {{#unless (eq role 'admin')}} 
                                {{!-- Edit Button --}}
                                <a href="/admin/users/edit/{{id}}" class="btn btn-sm btn-outline-primary shadow-sm me-1" title="Edit User">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger btn-delete shadow-sm" data-id="{{id}}" title="Delete User">
                                    <i class="bi bi-trash"></i>
                                </button>
                                {{/unless}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Form Ẩn dùng để submit Delete -->
<form id="formDelete" method="POST" action="">
    <input type="hidden" name="id" id="txtDeleteId">
</form>