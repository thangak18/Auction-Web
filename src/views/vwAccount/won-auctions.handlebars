{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Handle rating seller
    $(document).on('click', '.btn-rate-seller, .btn-edit-rate-seller', function(e) {
        e.preventDefault();
        const $btn = $(this);
        const productId = $btn.data('product-id');
        const sellerName = $btn.data('seller-name');
        const sellerId = $btn.data('seller-id');
        const isEdit = $btn.hasClass('btn-edit-rate-seller');
        
        // Get existing rating data if editing
        let existingRating = null;
        let existingComment = '';
        if (isEdit) {
            existingRating = $btn.data('rating');
            existingComment = $btn.data('comment') || '';
        }
        
        Swal.fire({
            title: isEdit ? `Edit Rating for ${sellerName}` : `Rate ${sellerName}`,
            html: `
                <div class="mb-3">
                    <label class="form-label">Rating:</label>
                    <div class="btn-group w-100" role="group">
                        <input type="radio" class="btn-check" name="rating" id="rating-positive" value="positive" autocomplete="off" ${existingRating === 'positive' ? 'checked' : ''}>
                        <label class="btn btn-outline-success" for="rating-positive">
                            <i class="bi bi-hand-thumbs-up"></i> Positive
                        </label>
                        
                        <input type="radio" class="btn-check" name="rating" id="rating-negative" value="negative" autocomplete="off" ${existingRating === 'negative' ? 'checked' : ''}>
                        <label class="btn btn-outline-danger" for="rating-negative">
                            <i class="bi bi-hand-thumbs-down"></i> Negative
                        </label>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Comment (optional):</label>
                    <textarea class="form-control" id="rating-comment" rows="3" placeholder="Write your comment...">${existingComment}</textarea>
                </div>
            `,
            showCancelButton: true,
            confirmButtonColor: '#72AEC8',
            cancelButtonColor: '#6c757d',
            confirmButtonText: isEdit ? 'Update Rating' : 'Submit Rating',
            preConfirm: () => {
                const rating = document.querySelector('input[name="rating"]:checked');
                const comment = document.getElementById('rating-comment').value;
                
                if (!rating) {
                    Swal.showValidationMessage('Please select a rating');
                    return false;
                }
                
                return {
                    rating: rating.value,
                    comment: comment
                };
            }
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: 'Processing...',
                    html: isEdit ? 'Updating rating...' : 'Submitting rating...',
                    allowOutsideClick: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });
                
                const method = isEdit ? 'PUT' : 'POST';
                const endpoint = `/account/won-auctions/${productId}/rate-seller`;
                
                fetch(endpoint, {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        seller_id: sellerId,
                        rating: result.value.rating,
                        comment: result.value.comment
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire('Success!', isEdit ? 'Rating updated successfully.' : 'Rating submitted successfully.', 'success')
                            .then(() => {
                                window.location.reload();
                            });
                    } else {
                        Swal.fire('Error!', data.message || 'Failed to submit rating', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire('Error!', 'Failed to submit rating', 'error');
                });
            }
        });
    });
</script>
{{/section}}

<div class="container-fluid mt-4 mb-5">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 mb-4">
      {{> client-sidebar}}
    </div>

    <!-- Main Content -->
    <div class="col-md-9">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
          <div class="d-flex align-items-center gap-3">
            <i class="bi bi-trophy text-warning" style="font-size: 1.5rem;"></i>
            <div>
              <h4 class="mb-0 fw-bold">Won Auctions</h4>
              <small class="text-muted">Auctions you have won</small>
            </div>
          </div>
        </div>

        <div class="card-body p-4" style="max-height: 600px; overflow-y: auto;">
          {{#if products.length}}
            <div class="table-responsive">
              <table class="table table-hover align-middle">
                <thead class="table-light">
                  <tr>
                    <th>Product</th>
                    <th>Category</th>
                    <th>Final Price</th>
                    <th>Seller</th>
                    <th>Ended</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each products}}
                  <tr>
                    <td>
                      <div class="d-flex align-items-center gap-3">
                        <img src="/static/{{this.thumbnail}}" alt="{{this.name}}" 
                             class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                        <div>
                          <div class="fw-bold">{{this.name}}</div>
                          <small class="text-muted">{{this.bid_count}} bids</small>
                        </div>
                      </div>
                    </td>
                    <td>
                      <span class="badge bg-secondary">{{this.category_name}}</span>
                    </td>
                    <td>
                      <strong class="text-success">{{format_number this.current_price}} VND</strong>
                    </td>
                    <td>
                      <div>
                        <div class="fw-semibold">{{this.seller_name}}</div>
                        <small class="text-muted">
                          <i class="bi bi-envelope"></i> {{this.seller_email}}
                        </small>
                      </div>
                    </td>
                    <td>
                      <div class="text-muted small">
                        <i class="bi bi-calendar"></i>
                        {{#if this.closed_at}}
                          {{format_date this.closed_at}}
                        {{else}}
                          {{format_date this.end_at}}
                        {{/if}}
                      </div>
                    </td>
                    <td>
                      {{#if (eq this.status "Pending")}}
                        <span class="badge bg-warning text-dark">
                          <i class="bi bi-clock-history"></i> Pending Payment
                        </span>
                      {{else if (eq this.status "Sold")}}
                        <span class="badge bg-success">
                          <i class="bi bi-check-circle-fill"></i> Completed
                        </span>
                      {{else if (eq this.status "Cancelled")}}
                        <span class="badge bg-danger">
                          <i class="bi bi-x-circle-fill"></i> Cancelled
                        </span>
                      {{/if}}
                    </td>
                    <td>
                      <div class="d-flex gap-2">
                        {{#if (eq this.status "Pending")}}
                          <a href="/products/detail?id={{this.id}}" class="btn btn-sm btn-outline-primary" title="View">
                            <i class="bi bi-eye"></i>
                          </a>
                          <a href="/products/complete-order?id={{this.id}}" class="btn btn-sm btn-success" title="Pay">
                            <i class="bi bi-credit-card"></i>
                          </a>
                        {{else if (eq this.status "Sold")}}
                          <a href="/products/detail?id={{this.id}}" class="btn btn-sm btn-outline-primary" title="View">
                            <i class="bi bi-eye"></i>
                          </a>
                          {{#if this.has_rated_seller}}
                            <button type="button" class="btn btn-sm btn-outline-primary btn-edit-rate-seller"
                                    data-product-id="{{this.id}}" 
                                    data-seller-name="{{this.seller_name}}" 
                                    data-seller-id="{{this.seller_id}}"
                                    data-rating="{{this.seller_rating}}"
                                    data-comment="{{this.seller_rating_comment}}"
                                    title="Edit Rating">
                              <i class="bi bi-star-fill"></i>
                            </button>
                          {{else}}
                            <button type="button" class="btn btn-sm btn-outline-primary btn-rate-seller"
                                    data-product-id="{{this.id}}" 
                                    data-seller-name="{{this.seller_name}}" 
                                    data-seller-id="{{this.seller_id}}"
                                    title="Rate Seller">
                              <i class="bi bi-star"></i>
                            </button>
                          {{/if}}
                        {{else if (eq this.status "Cancelled")}}
                          <a href="/products/detail?id={{this.id}}" class="btn btn-sm btn-outline-primary" title="View">
                            <i class="bi bi-eye"></i>
                          </a>
                          {{#if this.has_rated_seller}}
                            <button type="button" class="btn btn-sm btn-outline-primary btn-edit-rate-seller"
                                    data-product-id="{{this.id}}" 
                                    data-seller-name="{{this.seller_name}}" 
                                    data-seller-id="{{this.seller_id}}"
                                    data-rating="{{this.seller_rating}}"
                                    data-comment="{{this.seller_rating_comment}}"
                                    title="Edit Rating">
                              <i class="bi bi-star-fill"></i>
                            </button>
                          {{else}}
                            <button type="button" class="btn btn-sm btn-outline-primary btn-rate-seller"
                                    data-product-id="{{this.id}}" 
                                    data-seller-name="{{this.seller_name}}" 
                                    data-seller-id="{{this.seller_id}}"
                                    title="Rate Seller">
                              <i class="bi bi-star"></i>
                            </button>
                          {{/if}}
                        {{else}}
                          <a href="/products/detail?id={{this.id}}" class="btn btn-sm btn-outline-primary" title="View">
                            <i class="bi bi-eye"></i>
                          </a>
                        {{/if}}
                      </div>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          {{else}}
            <div class="text-center py-5">
              <i class="bi bi-trophy text-muted" style="font-size: 4rem;"></i>
              <h5 class="mt-3 text-muted">No Won Auctions</h5>
              <p class="text-muted">You haven't won any auctions yet.</p>
              <a href="/" class="btn btn-primary mt-3">
                <i class="bi bi-search"></i> Browse Products
              </a>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
